<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.exam.mapper.QuestionChoiceMapper">

    <insert id="insertBatch" useGeneratedKeys="true" keyProperty="id">
        insert into question_choices(id, question_id, content, is_correct, sort)
        values
        <foreach collection="choices" item="item" separator=",">
            (#{item.id},#{item.questionId},#{item.content},#{item.isCorrect},#{item.sort})
        </foreach>
    </insert>
</mapper>